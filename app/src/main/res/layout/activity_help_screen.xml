<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#476072"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="25sp"
            android:layout_height="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/appName"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowColor="#EEEEEE"
            android:shadowDx="-10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/txt_Help"
            android:textAlignment="center"
            android:textColor="#4A4343"
            android:textSize="34sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:paddingEnd="20sp"
        android:paddingBottom="10sp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="136dp"
            android:background="@drawable/chest" />

        <TextView
            android:id="@+id/txtTip"
            android:layout_width="171dp"
            android:layout_height="136dp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/txtTip1"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20sp"
        android:paddingEnd="50sp"
        android:paddingBottom="10sp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="128dp"
            android:background="@drawable/timefast" />

        <TextView
            android:id="@+id/txtTip2"
            android:layout_width="160dp"
            android:layout_height="126dp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/txtTip2"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20sp"
        android:paddingEnd="50sp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/timeslow" />

        <TextView
            android:id="@+id/txtTip3"
            android:layout_width="160dp"
            android:layout_height="126dp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@string/txtTip3"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtTutorial"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/txtTutorial"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/buttonTutorial"
            android:layout_width="131dp"
            android:layout_height="113dp"
            android:background="@drawable/youtubelogo"
            android:contentDescription="@string/youtube" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:backgroundTint="#548CA8"
            android:fontFamily="@font/chivo"
            android:text="@string/back"
            android:textSize="20sp" />

    </TableRow>

</TableLayout>