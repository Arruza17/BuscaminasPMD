<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#486393"
    tools:context=".ScoreBoard">

    <TextView
        android:id="@+id/txtScoreList"
        android:layout_width="259dp"
        android:layout_height="489dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="132dp"
        android:background="#85ADE2FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtScoreBoard" />

    <TextView
        android:id="@+id/txtScoreBoard"
        android:layout_width="259dp"
        android:layout_height="41dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="72dp"
        android:background="#20CCFF"
        android:text="@string/txt_scoreBoard"
        android:textAlignment="center"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/txtScoreList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#757474"
        android:text="@string/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>